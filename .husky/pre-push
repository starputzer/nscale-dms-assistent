#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks..."

# Run tests
echo "ğŸ§ª Running tests..."
npm run test:unit -- --passWithNoTests || {
  echo "âŒ Tests failed. Please fix them before pushing."
  exit 1
}

# Check bundle size
echo "ğŸ“¦ Checking bundle size..."
npm run build:analyze -- --report-only || {
  echo "âš ï¸  Bundle size check failed. Check if the build is too large."
}

# Run security audit
echo "ğŸ”’ Running security audit..."
npm audit --production --audit-level=high || {
  echo "âŒ High severity vulnerabilities found. Please fix them before pushing."
  echo "   Run 'npm audit fix' to try automatic fixes."
  exit 1
}

# Run dead code detection
echo "ğŸ” Checking for dead code..."
if [ -f "scripts/detect-dead-code.js" ]; then
  node scripts/detect-dead-code.js --quiet || {
    echo "âš ï¸  Dead code detected. Consider cleaning it up."
  }
fi

echo "âœ… Pre-push checks passed!"