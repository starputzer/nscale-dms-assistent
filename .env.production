# Production Environment Configuration
# Digital File Assistant - nscale-assist

# API Configuration
VITE_API_URL=https://api.nscale-assist.com
VITE_APP_TITLE="Digitale Akte Assistent"
VITE_APP_VERSION=1.0.0

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://nscale_user:${DB_PASSWORD}@localhost:5432/nscale_assist
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nscale_assist
DB_USER=nscale_user
# DB_PASSWORD should be set via environment variable

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security & Authentication
JWT_SECRET_KEY=${JWT_SECRET}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin Configuration
ADMIN_EMAILS=admin@nscale-assist.com
DEFAULT_ADMIN_PASSWORD=${ADMIN_PASSWORD}

# RAG System Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b-instruct-q4_1
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSIONS=768

# Document Processing
UPLOAD_MAX_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,xlsx,txt,md,odt,ods
OCR_ENABLED=true
OCR_LANGUAGE=deu+eng

# Performance Settings
WORKERS=4
THREADS_PER_WORKER=2
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30

# Background Jobs
BACKGROUND_JOBS_ENABLED=true
JOB_QUEUE_MAX_SIZE=1000
JOB_TIMEOUT_SECONDS=3600

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/nscale-assist/app.log
ERROR_TRACKING_DSN=${SENTRY_DSN}
METRICS_ENABLED=true

# CORS Configuration
CORS_ORIGINS=https://nscale-assist.com,https://www.nscale-assist.com
CORS_ALLOW_CREDENTIALS=true

# Feature Flags
FEATURE_RAG_ENABLED=true
FEATURE_OCR_ENABLED=true
FEATURE_BACKGROUND_PROCESSING=true
FEATURE_ADMIN_PANEL=true

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/nscale-assist.crt
SSL_KEY_PATH=/etc/ssl/private/nscale-assist.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/nscale-assist