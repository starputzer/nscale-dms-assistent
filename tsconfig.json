{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    /* Vue und JSX/TSX Support */
    "jsx": "preserve",
    
    /* Strict Mode mit eingeschränkten Regeln für Migration */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    
    /* Erweiterter Check und bessere Fehlermeldungen */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    
    /* Pfad-Aliase für konsistente Imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/*"],
      "@js/*": ["frontend/js/*"],
      "@css/*": ["frontend/css/*"],
      "@components/*": ["frontend/components/*"],
      "@assets/*": ["frontend/assets/*"],
      "@vue/*": ["frontend/vue/*"]
    },
    
    "typeRoots": [
      "./node_modules/@types",
      "./frontend/types"
    ]
  },
  "include": [
    "frontend/**/*.ts",
    "frontend/**/*.d.ts",
    "frontend/**/*.tsx",
    "frontend/**/*.vue",
    "frontend/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "_vue_backup",
    "_vue_backup_files",
    "_vue_backup_final",
    "_old_vue_backup"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}